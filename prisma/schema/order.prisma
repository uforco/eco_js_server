model orderHistory {
    id String @id @unique @default(cuid())

    product_id   String
    product_name String
    quantity     Float
    price        Float
    discount     Float
    total_price Float

    image     String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    order_detail_id String
    order           Order  @relation(fields: [order_detail_id], references: [order_id])
}

model Order {
    id            String        @id @default(cuid())
    order_id      String        @unique

    user_id       String
    order_detail orderHistory[]

    address String 
    city    String
    state   String
    postcode String


    order_date   DateTime       @default(now())
    
}

